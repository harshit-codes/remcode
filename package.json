{
  "name": "remcode",
  "version": "0.1.0",
  "description": "A code vectorization and analysis tool for better understanding of codebases",
  "main": "bin/remcode.js",
  "bin": {
    "remcode": "./bin/remcode.js"
  },
  "scripts": {
    "start": "node bin/remcode.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:mcp": "jest tests/mcp",
    "test:e2e": "jest tests/e2e",
    "test:mcp-inspector": "ts-node tests/mcp/run-inspector.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "serve": "ts-node src/index.ts serve",
    "docs": "node scripts/simple-docs-generator.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harshit-codes/remcode.git"
  },
  "keywords": [
    "code-analysis",
    "vectorization",
    "embeddings",
    "semantic-search",
    "code-quality",
    "pinecone",
    "langchain",
    "graphcodebert",
    "mcp",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/harshit-codes/remcode/issues"
  },
  "homepage": "https://github.com/harshit-codes/remcode#readme",
  "dependencies": {
    "@huggingface/inference": "^2.6.1",
    "@huggingface/transformers": "^3.5.1",
    "@octokit/plugin-rest-endpoint-methods": "^15.0.0",
    "@octokit/rest": "^21.1.1",
    "@pinecone-database/pinecone": "^6.0.1",
    "@types/string-similarity": "^4.0.2",
    "@typescript-eslint/typescript-estree": "^6.21.0",
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "langchain": "^0.0.194",
    "libsodium-wrappers": "^0.7.15",
    "llamaindex": "^0.11.1",
    "ora": "^5.4.1",
    "semver": "^7.7.2",
    "string-similarity": "^4.0.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@octokit/types": "^14.0.0",
    "@types/cors": "^2.8.16",
    "@types/eslint": "^9.6.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^20.17.50",
    "@types/typescript": "^0.4.29",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "complexity-report": "^2.0.0-alpha",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16"
  }
}
