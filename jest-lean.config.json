{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "displayName": "Lean Tests",
  "roots": ["<rootDir>/tests-lean"],
  "testMatch": [
    "**/tests-lean/**/*.test.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/tests-lean/setup.ts"],
  "testTimeout": 5000,
  "maxWorkers": 1,
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/**/index.ts"
  ],
  "coverageDirectory": "coverage-lean",
  "coverageReporters": ["text", "html"],
  "verbose": true,
  "bail": 1,
  "forceExit": true,
  "detectOpenHandles": false
}
