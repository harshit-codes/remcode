{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Remcode Development Session Schema",
  "description": "Schema for development session tracking with enhanced validation and type safety",
  "type": "object",
  "required": [
    "sessionId", "timestamp", "developer", "status", 
    "focus", "achievements", "blockers", "nextSteps", 
    "filesChanged", "learnings", "notes", "duration"
  ],
  "properties": {
    "sessionId": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}-.+$",
      "description": "Unique session identifier with date prefix (YYYY-MM-DD-description)"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when session was completed"
    },
    "developer": {
      "type": "string",
      "minLength": 1,
      "description": "Developer handle or name"
    },
    "status": {
      "type": "string",
      "enum": ["completed", "in_progress", "blocked"],
      "description": "Session completion status"
    },
    "focus": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "Primary focus area of the session"
    },
    "achievements": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 3
      },
      "minItems": 1,
      "description": "List of accomplishments in this session"
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Current blockers or challenges (empty array if none)"
    },
    "nextSteps": {
      "type": "array", 
      "items": {
        "type": "string",
        "minLength": 3
      },
      "minItems": 1,
      "description": "Planned next actions"
    },
    "filesChanged": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "File path relative to project root"
          },
          "type": {
            "type": "string", 
            "enum": ["added", "modified", "deleted"],
            "description": "Type of change made to the file"
          },
          "description": {
            "type": "string",
            "description": "Optional description of the change"
          }
        },
        "required": ["path", "type"]
      },
      "description": "Files modified during session"
    },
    "learnings": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 10
      },
      "description": "Key insights and lessons learned"
    },
    "notes": {
      "type": "string",
      "description": "Additional context and notes"
    },
    "duration": {
      "type": "integer",
      "minimum": 1,
      "maximum": 600,
      "description": "Session duration in minutes"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "feature", "bugfix", "refactor", "documentation", 
          "testing", "deployment", "analysis", "research",
          "optimization", "security", "integration", "setup",
          "migration", "validation", "automation", "tooling"
        ]
      },
      "uniqueItems": true,
      "description": "Categorical tags for session classification"
    },
    "priority": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "default": "medium",
      "description": "Session priority level"
    },
    "complexity": {
      "type": "string", 
      "enum": ["simple", "moderate", "complex", "expert"],
      "description": "Technical complexity level"
    },
    "relatedSessions": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}-.+$"
      },
      "description": "Related session IDs"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "description": "Schema version"
        },
        "toolsUsed": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Tools and technologies used"
        },
        "environment": {
          "type": "string",
          "enum": ["development", "testing", "staging", "production"],
          "description": "Environment where work was performed"
        },
        "codebaseSize": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of files in codebase"
        },
        "testsCovered": {
          "type": "boolean",
          "description": "Whether tests were written or updated"
        }
      },
      "description": "Additional metadata for analysis"
    }
  },
  "additionalProperties": false
}