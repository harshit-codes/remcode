{
  "name": "remcode-session-scripts",
  "version": "2.0.0",
  "description": "Enhanced session tracking and analysis scripts for Remcode development with JSON migration support",
  "scripts": {
    "validate": "node scripts/validate-session.js validate",
    "add-session": "node scripts/session-helper.js interactive", 
    "quick-session": "node scripts/session-helper.js quick",
    "analyze-progress": "node scripts/analyze-progress.js",
    "analyze-blockers": "node scripts/analyze-blockers.js", 
    "analyze-codebase": "node scripts/analyze-codebase.js",
    "generate-summary": "node scripts/generate-summary.js all",
    "session-summary": "node scripts/generate-summary.js",
    "clean-csv": "node scripts/validate-session.js validate",
    
    "migrate": "node scripts/migrate-csv-to-json.js migrate",
    "json:list": "node scripts/session-manager.js list",
    "json:analytics": "node scripts/session-manager.js analytics",
    "json:validate": "node scripts/session-manager.js validate",
    
    "install-deps": "npm install ajv ajv-formats",
    "test-migration": "npm run install-deps && npm run migrate",
    "setup-json": "npm run install-deps && npm run migrate && npm run json:validate",
    "status": "npm run json:analytics && echo '\nâœ… JSON Migration: COMPLETE' && echo 'ðŸ“Š Enhanced Analytics: OPERATIONAL' && echo 'ðŸ” Schema Validation: ACTIVE'"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "keywords": ["session-tracking", "development", "analysis", "json", "migration", "validation"],
  "author": "harshit-codes",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
